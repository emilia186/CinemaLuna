<UserControl x:Class="CinemaLuna.UserControls.MovieControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaLuna.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="230" d:DesignWidth="150">
    <Grid Margin="35">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <Rectangle Fill="#d9d9d9" Grid.Row="0" Height="200" Width="150"/>
        <Label Style="{StaticResource NormalText}" Content="Movie name" Grid.Row="1" HorizontalContentAlignment="Center" Width="150" FontSize="20"/>
    </Grid>
</UserControl>
