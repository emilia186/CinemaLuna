<UserControl x:Class="CinemaLuna.UserControls.TicketElementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaLuna.UserControls"
             mc:Ignorable="d" 
             d:DesignWidth="200" Height="auto" MaxWidth="250" Background="Gray" Margin="5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="titleLabel" Grid.Row="0" Style="{StaticResource NormalText}" FontSize="15" Margin="5"/>
        <Separator Height="1" Grid.Row="1" Background="LightGray" Margin="10,0"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label x:Name="dateLabel" Style="{StaticResource NormalText}" Margin="5"/>
            <Label x:Name="timeLabel" Style="{StaticResource NormalText}" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Vertical">
            <Label x:Name="seatLabel" Style="{StaticResource NormalText}" Margin="0" Padding="10,0"/>
        </StackPanel>
    </Grid>
</UserControl>
