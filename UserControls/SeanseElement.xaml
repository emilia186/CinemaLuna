<UserControl x:Class="CinemaLuna.UserControls.SeanseElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaLuna.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="140" Width="140" Height="110" Background="DimGray" Margin="0,0,30,40" VerticalAlignment="Top">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="TimeLabel" Grid.Row="0" Foreground="#d9d9d9" FontWeight="DemiBold" FontSize="16" Margin="8" VerticalContentAlignment="Top"/>
        <Label x:Name="SalaLabel" Grid.Row="1" Foreground="#d9d9d9" FontWeight="DemiBold" FontSize="14" Margin="13,0" Padding="0"/>
        <Label x:Name="FormatLabel" Grid.Row="2" Foreground="#d9d9d9" FontWeight="DemiBold" FontSize="14" Margin="8,0,0,8"/>

    </Grid>
</UserControl>
